@model ContactWeb.Models.Contact

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete the contact: @Model.FriendlyName?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FriendlyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FriendlyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        @if (Model.Birthday != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Birthday)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Birthday)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.PhonePrimary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhonePrimary)
        </dd>

        @if (!string.IsNullOrWhiteSpace(Model.PhoneSecondary))
        {
            <dt>
                @Html.DisplayNameFor(model => model.PhoneSecondary)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PhoneSecondary)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.FriendlyAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FriendlyAddress)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

